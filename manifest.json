{
  "manifest_version": 3,
  "name": "Background Image Download",
  "version": "1.0",
  "description": "Quickly download an element's background image from any webpage.",
  "permissions": [
    "downloads",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ]
}
